<p id="notice">
 <%=  notice %>
<div class ="container px-5 px-sm-0" >
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
     <%= message %>
    <% end %>
   <% end %>
  <div class="row">
    <div class="col-md-3">
<h1>UserInfo</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class= "tabel">
    <thead>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </thead>
  </table>
  <div>
    <p><%= link_to edit_user_path(@user),class: "btn btn-outline-secondary btn-block"  do%>
         <i class=" fas fa-user-cog" ></i>
         <% end %>
    </p>
  </div>

  <h1>New book</h1>
  <%= form_with model:@book_new, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
<table class="table">
  <tbody>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br/ >
    <%= link_to @user.name, user_path(@user.id) %>
    </td>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <td><% if @user.id == current_user.id %>
        <%= link_to edit_book_path(@book.id) do %>
        <div class= " edit btn btn-outline-secondary btn-default btn-block" >
          <span class="glyphicon glyphicon-wrench" aria-hidden="true">
            Edit
          </span>
        </div>
        <% end %></td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
    <% end %>
  </tr>
  </tbody>
</table>
</div>
</div>
</div>
