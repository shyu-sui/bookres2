<div class ="info" >
<h1>UserInfo</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name"><%= @user.name %></h3>
  <h3 class="profile-introduction"><%= @user.introduction %></h3>
  <div> <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% end %>
  </div>
</div>

<div class = "NEW" >
  <h1>New book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>

  <%= f.submit 'Create Book' %>

  <% end %>
</div>

<div class = "show" >
  <h1>Books</h1>
<table>
  <thead>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>
  </thead>
 <% @books.each do |book| %>
  <tbody>
  <tr>
   <td><%= @user.name %></td>
   <td><%= book.title %></td>
   <td><%= book.opinion %></td>
  </tr>
  </tbody>
 <% end %>
</table>
</div>
