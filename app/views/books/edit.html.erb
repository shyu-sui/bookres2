<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
         <%= @book.errors.count %>件のerrorが発生しました
         <% @book.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
      <% end %>
      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <label><%= f.text_field :title, autofocus:true, id:"inputTitle", placeholder:"title"%></label>
      </div>
      <div class="form-group">
        <label for="inputOpinion">Opinion</label>
        <label><%= f.text_field :body %></label>
      </div>
      <div class="form-group"><%= f.submit "Update Book" %></div>
      <% end %>

      <%= link_to "Show",book_path %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>