<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, autofocus:true, id:"inputTitle", placeholder:"title"%>
      <label for="inputOpinion">Opinion</label>
      <%= f.text_field :body %>
      <%= f.submit "update Book" %>
      <% end %>

      <div><% link_to "Show", book_path %></div> |
      <div><% link_to "Back", books_path %></div>
    </div>
  </div>
</div>