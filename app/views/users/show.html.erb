<p id="notice">
 <%=  notice %> 
<div class ="container px-5 px-sm-0" >
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
     <%= message %>
    <% end %>
   <% end %>
  <div class="row">
    <div class="col-md-3">
  <h1>UserInfo</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class= "tabel">
    <thead>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </thead>
  </table>
  <div> <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% end %>
  </div>

  <h1>New book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
    <% @books.each do |book| %>
  <tbody>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
    <td><% if @user.id == current_user.id %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <% end %>
  </tr>
  </tbody>
 <% end %>
</table>
</div>
</div>
</div>