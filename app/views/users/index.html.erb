<div class ="info" >
  <h1>User info</h1>
</div>

<div class = "NEW" >
  <h1>New book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :opinion %>

  <%= f.submit 'Create Book' %>

  <% end %>
</div>

<div class = "show" >
  <h1>Books</h1>
<table>
  <thead>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>
  </thead>
 <% @books.each do |book| %>
  <tbody>
  <tr>
   <td><%= @user %></td>
   <td><%= @book.title %></td>
   <td><%= @book.opinion %></td>
  </tr>
  </tbody>
 <% end %>
</table>
</div>
